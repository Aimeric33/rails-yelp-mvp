<h1>Fiche du restaurant <%= @restaurant.name %></h1>

<p>Category : <%= @restaurant.category %></p>
<p>Name : <%= @restaurant.name %></p>
<p>Adress : <%= @restaurant.address %></p>

<%= link_to "Retour Ã  la liste", restaurants_path, class: "btn btn-secondary mt-3" %>

<h2 class="mt-3">Ajouter un avis</h2>
<%= render 'reviews/form', restaurant: @restaurant, review: @review %>

<h2 class="mt-3">Tous les avis</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %>/5 - <%= review.content %></li>
  <% end %>
</ul>
