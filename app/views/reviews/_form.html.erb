<%= simple_form_for [restaurant, review],
  wrapper: :floating_labels_form,
  wrapper_mappings: {
    select:        :floating_labels_select
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :rating, collection: 0..5 %>

  <%= f.input :content %>

  <%= f.button :submit, "Envoyer mon avis", class: "btn-primary" %>
<% end %>
